= form_for @post, remote: true do |f|
  - if @post.errors.any?
    #error_explanation
      %h2= "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:"
      %ul
        - @post.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :message
    = f.text_area :message, :rows => 3
  -#.field
  -#  = f.label :user_id
  -#  = f.text_field :user_id
  .actions
    = f.submit 'Save'
